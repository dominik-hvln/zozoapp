{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend"
    },
    {
      "source": "/admin/:path*",
      "destination": "/admin"
    },
    {
      "source": "/admin",
      "destination": "/admin"
    },
    {
      "source": "/:path*",
      "destination": "/frontend"
    }
  ]
}